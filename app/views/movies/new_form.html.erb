<h2>Add a new movie</h2>
<form action="http://localhost:3000/movies/create_row">
  <label for="title">Title</label>
  <input type="text" name="title" value="<%= @new_movie.title %>">
  <label for="image_url">Image URL</label>
  <input type="text" name="image_url" value="<%= @new_movie.image_url %>">
  <label for="year">Year</label>
  <input type="text" name="year" value="<%= @new_movie.year %>">
  <label for="duration">Duration</label>
  <input type="text" name="duration" value="<%= @new_movie.duration %>">
  <label for="description">Description</label>
  <input type="text" name="description" value="<%= @new_movie.description %>">
  <button>Add movie</button>
</form>
